{
	"info": {
		"_postman_id": "linkedin-automation-phase2",
		"name": "LinkedIn Automation - Phase 2 (Prospect Management)",
		"description": "API collection for testing prospect and tag endpoints in Phase 2.\n\nBase URL: http://localhost:8000/api\n\n**Features:**\n- Prospect CRUD operations\n- Tag CRUD operations\n- Bulk prospect import\n- Tag attachment/detachment\n- Filtering and search\n- Prospect statistics\n\n**Setup:**\n1. Complete Phase 1 (Authentication)\n2. Login to get auth token\n3. Token will be auto-saved to environment",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Prospects",
			"item": [
				{
					"name": "Get All Prospects",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {
							"raw": "{{base_url}}/prospects?per_page=15",
							"host": ["{{base_url}}"],
							"path": ["prospects"],
							"query": [
								{"key": "per_page", "value": "15", "description": "Items per page"},
								{"key": "connection_status", "value": "not_connected", "disabled": true},
								{"key": "tag_id", "value": "1", "disabled": true},
								{"key": "search", "value": "CEO", "disabled": true}
							]
						},
						"description": "Get all prospects with optional filtering:\n- connection_status: not_connected, pending, connected, withdrawn\n- tag_id: Filter by tag ID\n- search: Search in name, company, headline\n- per_page: Pagination size"
					}
				},
				{
					"name": "Create Prospect",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"full_name\": \"Jane Smith\",\n    \"profile_url\": \"https://linkedin.com/in/janesmith\",\n    \"headline\": \"CEO at TechCorp\",\n    \"company\": \"TechCorp\",\n    \"location\": \"San Francisco, CA\"\n}"
						},
						"url": {"raw": "{{base_url}}/prospects", "host": ["{{base_url}}"], "path": ["prospects"]}
					}
				},
				{
					"name": "Bulk Import Prospects",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"prospects\": [\n        {\n            \"full_name\": \"Michael Brown\",\n            \"profile_url\": \"https://linkedin.com/in/michaelbrown\",\n            \"headline\": \"CTO at StartupXYZ\",\n            \"company\": \"StartupXYZ\",\n            \"location\": \"New York, NY\"\n        },\n        {\n            \"full_name\": \"Sarah Wilson\",\n            \"profile_url\": \"https://linkedin.com/in/sarahwilson\",\n            \"headline\": \"VP Marketing at BigCorp\",\n            \"company\": \"BigCorp\",\n            \"location\": \"Austin, TX\"\n        }\n    ]\n}"
						},
						"url": {"raw": "{{base_url}}/prospects/bulk", "host": ["{{base_url}}"], "path": ["prospects", "bulk"]},
						"description": "Bulk import up to 100 prospects at once. Skips duplicates based on profile_url."
					}
				},
				{
					"name": "Get Single Prospect",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/prospects/1", "host": ["{{base_url}}"], "path": ["prospects", "1"]}
					}
				},
				{
					"name": "Update Prospect",
					"request": {
						"method": "PUT",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"connection_status\": \"pending\",\n    \"notes\": \"Sent connection request on 2025-11-29\"\n}"
						},
						"url": {"raw": "{{base_url}}/prospects/1", "host": ["{{base_url}}"], "path": ["prospects", "1"]}
					}
				},
				{
					"name": "Delete Prospect",
					"request": {
						"method": "DELETE",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/prospects/1", "host": ["{{base_url}}"], "path": ["prospects", "1"]}
					}
				},
				{
					"name": "Attach Tags to Prospect",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"tag_ids\": [1, 2]\n}"
						},
						"url": {"raw": "{{base_url}}/prospects/1/tags", "host": ["{{base_url}}"], "path": ["prospects", "1", "tags"]}
					}
				},
				{
					"name": "Remove Tag from Prospect",
					"request": {
						"method": "DELETE",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/prospects/1/tags/1", "host": ["{{base_url}}"], "path": ["prospects", "1", "tags", "1"]}
					}
				},
				{
					"name": "Get Prospect Stats",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/prospects/stats", "host": ["{{base_url}}"], "path": ["prospects", "stats"]},
						"description": "Get prospect statistics: total, not_connected, pending, connected"
					}
				}
			]
		},
		{
			"name": "Tags",
			"item": [
				{
					"name": "Get All Tags",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/tags", "host": ["{{base_url}}"], "path": ["tags"]},
						"description": "Get all tags with prospect count for each tag"
					}
				},
				{
					"name": "Create Tag",
					"request": {
						"method": "POST",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Hot Lead\",\n    \"color\": \"#ef4444\"\n}"
						},
						"url": {"raw": "{{base_url}}/tags", "host": ["{{base_url}}"], "path": ["tags"]}
					}
				},
				{
					"name": "Get Single Tag",
					"request": {
						"method": "GET",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/tags/1", "host": ["{{base_url}}"], "path": ["tags", "1"]}
					}
				},
				{
					"name": "Update Tag",
					"request": {
						"method": "PUT",
						"header": [
							{"key": "Content-Type", "value": "application/json"},
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Hot Lead - Priority\",\n    \"color\": \"#dc2626\"\n}"
						},
						"url": {"raw": "{{base_url}}/tags/1", "host": ["{{base_url}}"], "path": ["tags", "1"]}
					}
				},
				{
					"name": "Delete Tag",
					"request": {
						"method": "DELETE",
						"header": [
							{"key": "Accept", "value": "application/json"},
							{"key": "Authorization", "value": "Bearer {{auth_token}}"}
						],
						"url": {"raw": "{{base_url}}/tags/1", "host": ["{{base_url}}"], "path": ["tags", "1"]},
						"description": "Delete tag and remove all prospect associations"
					}
				}
			]
		}
	],
	"variable": [
		{"key": "base_url", "value": "http://localhost:8000/api", "type": "string"}
	]
}
