{
	"info": {
		"_postman_id": "linkedin-automation-phase1",
		"name": "LinkedIn Automation - Phase 1 (Authentication)",
		"description": "API collection for testing authentication endpoints in Phase 1.\n\nBase URL: http://localhost:8000/api\n\n**Features:**\n- User Registration\n- User Login\n- Get Authenticated User\n- Logout\n\n**Setup:**\n1. Make sure Laravel server is running: `php artisan serve`\n2. Database migrations should be completed\n3. MySQL should be running on XAMPP",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save token to environment variable for future requests",
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('auth_token', response.token);",
									"    pm.environment.set('user_id', response.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"register"
							]
						},
						"description": "Register a new user account.\n\n**Required fields:**\n- name: User's full name\n- email: Valid email address (must be unique)\n- password: Minimum 8 characters\n- password_confirmation: Must match password\n\n**Response:**\n- 201: Registration successful, returns user data and API token\n- 422: Validation errors"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save token to environment variable for future requests",
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('auth_token', response.token);",
									"    pm.environment.set('user_id', response.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"login"
							]
						},
						"description": "Login with existing credentials.\n\n**Required fields:**\n- email: User's email address\n- password: User's password\n\n**Response:**\n- 200: Login successful, returns user data and API token\n- 422: Invalid credentials"
					},
					"response": []
				},
				{
					"name": "Get Authenticated User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/user",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"user"
							]
						},
						"description": "Get the currently authenticated user's information.\n\n**Authentication:** Required (Bearer token)\n\n**Response:**\n- 200: Returns user data\n- 401: Unauthenticated (missing or invalid token)"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/logout",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"logout"
							]
						},
						"description": "Logout the current user by revoking their access token.\n\n**Authentication:** Required (Bearer token)\n\n**Response:**\n- 200: Logout successful\n- 401: Unauthenticated"
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api",
			"type": "string"
		}
	]
}
