{
  "manifest_version": 3,
  "name": "LinkedIn Automation",
  "version": "1.0.0",
  "description": "Extract LinkedIn prospects and manage outreach campaigns",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications",
    "cookies"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:8000/*",
    "http://localhost:3000/*"
  ],

  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "services/storage.js",
        "services/api.js",
        "utils/selectors.js",
        "services/extractor.js",
        "services/actionExecutor.js",
        "services/queueProcessor.js",
        "services/messageExtractor.js",
        "content-script.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["webapp-connector.js"],
      "run_at": "document_start"
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
